{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "API user",
    "type": "object",
    "properties": {
        "$schema": {
            "enum": ["api:user"],
            "type": "string"
        },
        "uuid": {
            "type": "string"
        },
        "username": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\\.[a-zA-Z0-9-]+)*$"
        },
        "role": {
            "type": "string",
            "enum": ["user", "admin"]
        },
        "status": {
            "type": "string",
            "enum": ["active", "trial", "inactive"]
        }
    },
    "additionalProperties": false,
    "required": ["$schema", "uuid", "username"]
}
