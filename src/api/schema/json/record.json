{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "API record",
    "type": "object",
    "properties": {
        "$schema": {
            "enum": ["api:record"],
            "type": "string"
        },
        "uuid": {
            "type": "string"
        },
        "service": {
            "type": "object"
        },
        "user": {
            "type": "object"
        },
        "cost": {
            "type": "number"
        },
        "balance": {
            "type": "number"
        },
        "response": {
            "type": "string"
        },
        "date": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": ["service", "user"]
}
